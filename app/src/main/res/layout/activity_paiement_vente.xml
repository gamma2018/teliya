<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="70dp"
        android:background="#d6d4d4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:weightSum="2"
            android:padding="5dp"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:paddingBottom="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="IMPRIMER TICKET"
                android:textColor="@color/primaryDark"
                android:textSize="19sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:weightSum="2"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="1dp"
            >

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date ex: 01/01/2018"
                android:padding="1dp"
                android:layout_weight="1"

                />
            <TextView
                android:id="@+id/nomPharmacie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telya Pharma"
                android:padding="5dp"
                android:layout_weight="1"

                />
            <TextView
                android:id="@+id/valeurNomClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel : +224 622-35-03-75"
                android:padding="5dp"
                android:layout_weight="1"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:weightSum="2"
            android:padding="20dp"
            >
            <ListView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:id="@+id/listeProduit">

            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:weightSum="2"
            android:padding="20dp"
            android:layout_marginTop="2dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total : "
                android:padding="15dp"
                android:layout_weight="1"
                android:textColor="@color/primaryDark"
                />

            <TextView
                android:id="@+id/montant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="450 000 GNF"
                android:padding="15dp"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>